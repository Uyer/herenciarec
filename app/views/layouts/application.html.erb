<!DOCTYPE html>
<html>
  <head>
    <title>Herenciarec</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/b56ac66b39.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <nav class="navbar navbar-expand-md navbar-light bg-light">
      <a class="navbar-brand" href="#"><%= image_pack_tag 'herencia.svg' %></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <%= link_to "Home", root_path, class: "nav-link" %><span class="sr-only">(current)</span>
            </li>
            <li class="nav-item">
              <%= link_to "About", simple_pages_about_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Contact", simple_pages_contact_path, class: "nav-link" %>
            </li>
          </ul>
        <form class="form-inline my-2 my-lg-0">
          <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
          <button class="btn btn-dark my-2 my-sm-0" type="submit">Search</button>
        </form>
      </div>
    </nav> 
    <div class="container-fluid">
    <%= yield %>
    </div>
    <footer class="navbar fixed-bottom navbar-dark bg-dark">
      <ul class="nav mx-auto">
        <li class="nav-item">
          <a class="nav-link active" href="#!"><i class="fab fa-facebook fa-2x"></i></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#!"><i class="fab fa-bandcamp fa-2x"></i></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#!"><i class="fab fa-instagram fa-2x"></i></a>
        </li>
      </ul>
    </footer>
  </body>
</html>
